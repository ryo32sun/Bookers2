<div class="container mt-3">
    <div class="row">
        <%= render 'user_info', user: @user %>
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <th><%= image_tag user.get_profile_image(100,100) %></th>
                            <th><%= user.name %></th>
                            <th><%= link_to "Show", user_path(user.id) %></th>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

