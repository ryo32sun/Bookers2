<div class="container mt-3">
    <div class="row">
        <%= render 'users/user_info' , user: @user %>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <td><%= link_to user_path(@user.id) do %>
                        <%= image_tag @user.get_profile_image(100,100) %><br>
                        <%= @user.name %>
                        <% end %></td>
                    <td><%= link_to book_path(@book.id) do %>
                        <%= @book.title %>
                        <% end %></td>
                    <td><%= @book.body %></td>
                </tbody>
            </table>
        </div>
    </div>
</div>